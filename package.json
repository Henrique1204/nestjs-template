  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:run": "docker run --rm --name pokedex-api -dp 3000:3000 pokedex-api",
    "docker:stop": "docker stop pokedex-api",
    "docker:build": "docker build -t pokedex-api .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --coverage=false",
    "test:clear": "jest --clearCache",
    "test:silent": "jest --coverage=false --watchAll --silent --noStackTrace",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --silent --noStackTrace",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest.e2e.config.js"
  },
  "dependencies": {
